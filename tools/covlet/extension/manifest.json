{
  "manifest_version": 3,
  "name": "Covlet",
  "version": "0.1.0",
  "description": "Generate cover letters from LinkedIn job pages.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["http://localhost:5055/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Covlet"
  }
}
